<!DOCTYPE HTML>
<html lang="pt-br">
	<head>
		<meta charset="UTF-8">

		<title>COVID-19</title>
		
		<!-- JQuery -->
		<script src="js/jquery-2.2.1.js"></script>

		<!-- bootstrap - link cdn -->
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
	
		<!-- incluindo css -->
		<link href="css/style.css" rel="stylesheet">

		<!-- favicon -->
		<link rel="shortcut icon" href="../../public/images/favicon.ico" />
	</head>

	<body>

		<nav class="navbar navbar-default navbar-static-top">
			<div class="container">
				<div class="navbar-header">
					<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					
					<img src="images/logo.png" style="margin-top:2px;"/>
				</div>

				<div id="navbar" class="navbar-collapse collapse">
					<ul class="nav navbar-nav navbar-right">
						<li><a href="/">HOME</a></li>
					</ul>
				</div>
			</div>
		</nav>


	    <div class="container">
		
			<% if(validacao.length > 0){ %>
				<div class="row">
					<div class="col-md-12">
						<div class="alert alert-danger">
							<strong>Atenção!</strong>
							<ul>
								<% for(var i = 0; i < validacao.length; i++){ %>
									<li><%= validacao[i].msg %></li>
								<% } %>
							</ul>
						</div>
					</div>
				</div>
			<% } %>

	    	<div class="row">
	    		<div class="col-md-12">
					<form action="/Pacientes/salvar" method="POST">
						<input type="hidden" id="IDPaciente" name="IDPaciente" value="<%=paciente.IDPaciente%>">
						<div class="form-group">
							<label for="titulo">Nome:</label>
							<input type="text" class="form-control" id="NomePaciente" name="NomePaciente" value="<%=paciente.NomePaciente%>">
						</div>

						<div class="form-group">
							<label for="pwd">Status:</label>
							<input type="text" class="form-control" id="StatusPaciente" name="StatusPaciente" value="<%=paciente.StatusPaciente%>">
						</div>

						
						<div class="form-group">
							<label for="pwd">CPF:</label>
							<input type="text" class="form-control" id="CPFPaciente" name="CPFPaciente" value="<%=paciente.CPFPaciente%>">
						</div>

						<div class="form-group">
							<label for="pwd">RG:</label>
							<input type="text" class="form-control" id="RGPaciente" name="RGPaciente"  value="<%=paciente.RGPaciente%>">
						</div>

						<div class="form-group">
							<label for="pwd">Telefone:</label>
							<input type="text" class="form-control" id="TelefonePaciente" name="TelefonePaciente" onkeyup="mascaraTelefone()" value="<%=paciente.TelefonePaciente%>">
						</div>

						<div class="form-group">
							<label for="pwd">Endereço:</label>
							<input type="text" class="form-control" id="EnderecoPaciente" name="EnderecoPaciente" value="<%=paciente.EnderecoPaciente%>">
						</div>

						

						<div class="form-group">
							<label for="pwd">Bairro:</label>
							<input type="text" class="form-control" id="BairroPaciente" name="BairroPaciente" value="<%=paciente.BairroPaciente%>">
						</div>

						<div class="form-group">
							<label for="pwd">Cidade:</label>
							<input type="text" class="form-control" id="CidadePaciente" name="CidadePaciente" value="<%=paciente.CidadePaciente%>">
						</div>

						<div class="form-group">
							<label for="pwd">Estado:</label>
							<input type="text" class="form-control" id="EstadoPaciente" name="EstadoPaciente" value="<%=paciente.EstadoPaciente%>">
						</div>

						<div class="form-group">
							<label for="pwd">Pais:</label>
							<input type="text" class="form-control" id="PaisPaciente" name="PaisPaciente" value="<%=paciente.PaisPaciente%>">
						</div>

						<button type="submit" class="btn btn-default">Cadastrar</button>
						</form>
		    	</div>
	    	</div>
	    </div>
	
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>
		<script type="text/javascript">
			function mascaraTelefone(){
				//onkeyup="mascaraTelefone()"
			
				var telefone = document.getElementById('TelefonePaciente')
				if(telefone.value.length == 2 ){
					telefone.value = "(" + telefone.value + ") "
				}
				if(telefone.value.length == 9 ){
					telefone.value = telefone.value + "-"
				}
				
			}

			</script>
	
	</body>
</html>