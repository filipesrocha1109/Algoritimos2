<!DOCTYPE HTML>
<html lang="pt-br">
	<head>
		<meta charset="UTF-8">

		<title>COVID-19</title>
		
		<!-- JQuery -->
		<script src="js/jquery-2.2.1.js"></script>

		<!-- bootstrap - link cdn -->
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
	
		<!-- incluindo css -->
		<link href="css/style.css" rel="stylesheet">

		<!-- favicon -->
		<link rel="shortcut icon" href="images/favicon.ico" />
	</head>

	<body>

		<nav class="navbar navbar-default navbar-static-top">
			<div class="container">
				<div class="navbar-header">
					<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					
					<img src="images/logo.png" style="margin-top:2px;"/>
				</div>

				<div id="navbar" class="navbar-collapse collapse">
					<ul class="nav navbar-nav navbar-right">
						<li><a href="/">HOME</a></li>
						<% if(login){%>
							<li><a href="/logout">SAIR</a></li>	
						<%}else{%>
							<li><a href="/admin">LOGIN</a></li>
						<%}%>
					</ul>
				</div>
			</div>
		</nav>


	    <div class="container">
			<% if(locais.length > 0){ %>
				<% for(var i = 0; i < locais.length; i++){ %>
	    			<div class="row">
	    				<div class="col-md-12">
	    					<div class="noticia_wrapper">
								<a href="local?IDLocal=<%= locais[i].IDLocal %>" class="noticia_titulo"><%=locais[i].NomeLocal%></a>
								<span class="noticia_autor"><%= locais[i].EnderecoLocal %>, <%= locais[i].NumeroLocal%> - <%= locais[i].BairroLocal %> , <%= locais[i].CidadeLocal %> - <%= locais[i].EstadoLocal %> - <%= locais[i].PaisLocal %></span>
								<%if(pacientes){%>
									<% var NumerodePacientesLocal=[]%>
									<%for(var j = 0;j<pacientes.length;j++){ %>
										<% if(pacientes[j].HospitalID == locais[i].IDLocal ){  %>
											<% if(pacientes[j].StatusPaciente=='HOSPITALIZADO' || pacientes[j].StatusPaciente=='UTI'){%>					
												<% NumerodePacientesLocal.push(pacientes[j].IDPaciente)	%>
											<%}%>										
										<% } %>	
									<% } %>
								<% } %>	
								<% if(login){%>		    					
								<span class="noticia_data"> Número de Leitos: <%= locais[i].NumeroLeitos %></span>
								<% } %>	
								<%
								var x = NumerodePacientesLocal.length
								var y = locais[i].NumeroLeitos

								var result = y-x
								
								%>
								<span class="noticia_data"> Número de Leitos Disponiveis: <%=result %></span>
								
								
		    					<p class="noticia_resumo"></p>
								
		    				</div>
		    			</div>
				  	</div>	
				<% } %>				
			<% } %>
		</div>
		<% if(login){%>
		<div class="container" >
			
			<a href="/addlocal" > 
				<button class="btn btn-default btn-add-local">Adicionar Local</button>
			</a>
		</div>
		<%}%>
	
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>
	
	</body>

</html>